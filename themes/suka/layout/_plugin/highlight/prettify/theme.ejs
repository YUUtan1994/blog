<% if ( (is_post()) ) { %>
    <% if (theme.vendors.prettify_theme) { %>
        <link rel="stylesheet" href="<%= theme.vendors.prettify_theme %>">
    <% } else if (theme.prettify.theme) { %>
        <link rel="stylesheet" href="<%- url_for('lib/prettify/themes/' + theme.prettify.theme + '.min.css') %>">
    <% } %>
    <style>
        pre.prettyprint {
            padding: 4px 0 0 2px !important;
        }

        pre.prettyprint ol,
        pre.prettyprint ul {
            padding-left: 42px;
        }

        pre.prettyprint ol li {
            background: transparent;
        }

        .prettyprint li.L0,
        .prettyprint li.L1,
        .prettyprint li.L2,
        .prettyprint li.L3,
        .prettyprint li.L4,
        .prettyprint li.L5,
        .prettyprint li.L6,
        .prettyprint li.L7,
        .prettyprint li.L8,
        .prettyprint li.L9 {
            <% if (theme.prettify.linenumber === true) { %>
            list-style-type: decimal !important;
            <% } else { %>
            list-style-type: none !important;
            <% } %>
        }
    </style>
<% } %>
